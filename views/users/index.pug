extends ../layout/common.pug

block content
  div.d-flex.align-items-center
    h1 Users

    a.btn.btn-primary.ml-5(href="/users/create") New

  form(action='/users/search', method='GET', class="d-flex")
    input(type='text', name='q', class="form-control")
    button(class="btn btn-primary ml-2") Search

  table.table

    thead
    tr
      th(scope='col') Name
      th(scope='col') Phone
      th(scope='col') Info
    tbody
    each user in users
      tr
        td= user.name
        td= user.phone
        td 
          a.btn.btn-light(href="/users/" + user.id) View