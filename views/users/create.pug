extends ../layout/common.pug

block content
  h1 Create user

  if errors
    each error in errors
      .alert.alert-danger(role='alert')= error

  form(class="pt-3", action="/users/create", method="POST", enctype="multipart/form-data")
    label.d-block(for="name") Name
    input.form-control#name(type="text", name="name", value=values ? values.name : "")

    label.pt-2.d-block(for="phone") Phone
    input.form-control#phone(type="text", name="phone", value=values ? values.phone : "")
    
    label(for="avatar") Avatar
    input#avatar.form-control-file(name="avatar", type="file")

    button.mt-3.btn.btn-primary Create