extends ../layout/common.pug

block content

  .container.d-flex.justify-content-between.align-items-center
    h1 Products

    form.form-inline.my-2.my-lg-0
      input.form-control.mr-sm-2(type='search', placeholder='Search', aria-label='Search')
      button.btn.btn-outline-success.my-2.my-sm-0(type='submit') Search


  .container
      .card-deck
        each product in products
          .col-3
            .card
              img.card-img-top.img-fluid(src= product.image, alt= product.products)
              .card-body
                h5.card-title Card title
                p.card-text= product.description
                a.btn.btn-primary(href="/cart/add/" + product.id) Add

  nav(aria-label='Page navigation example').d-flex.justify-content-center.mt-3
    ul.pagination
      li.page-item
        a.page-link(href='?page=' + previousPage) Previous
      li.page-item
        a.page-link(href='?page=' + previousPage)= previousPage
      li.page-item
        a.page-link.font-weight-bold(href='?page=' + page)= page
      li.page-item
        a.page-link(href='?page=' + nextPage)= nextPage  
      li.page-item
        a.page-link(href='?page=' + nextPage) Next