extends ../layout/common.pug

block content
  h1 Login

  if errors
    each error in errors
      .alert.alert-danger(role='alert')= error

  form(class="pt-3", method="POST")
    label.d-block(for="email") Email
    input.form-control#email(type="text", name="email", value=values ? values.email : "")

    label.pt-2.d-block(for="password") Password
    input.form-control#password(type="password", name="password", value=values ? values.password : "")

    button.mt-3.btn.btn-primary Login